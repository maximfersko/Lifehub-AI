<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="lifehub">
        <createTable tableName="users">
            <column name="id" type="UUID">
                <constraints primaryKey="true"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="password_hash" type="VARCHAR(255)" />
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>
    </changeSet>

    <changeSet id="2" author="lifehub">
        <createTable tableName="user_profiles">
            <column name="id" type="UUID">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_id" type="UUID">
                <constraints nullable="false" foreignKeyName="fk_profile_user"
                             references="users(id)"/>
            </column>
            <column name="full_name" type="VARCHAR(255)"/>
            <column name="timezone" type="VARCHAR(50)"/>
            <column name="preferences" type="JSONB"/>
        </createTable>
    </changeSet>

    <changeSet id="3" author="lifehub">
        <createTable tableName="tasks">
            <column name="id" type="UUID">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_id" type="UUID">
                <constraints nullable="false" foreignKeyName="fk_task_user"
                             references="users(id)"/>
            </column>
            <column name="title" type="VARCHAR(255)"/>
            <column name="description" type="TEXT"/>
            <column name="status" type="VARCHAR(50)" defaultValue="pending"/>
            <column name="due_date" type="TIMESTAMP"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>
    </changeSet>

    <changeSet id="4" author="lifehub">
        <createTable tableName="events">
            <column name="id" type="UUID">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_id" type="UUID">
                <constraints nullable="false" foreignKeyName="fk_event_user"
                             references="users(id)"/>
            </column>
            <column name="title" type="VARCHAR(255)"/>
            <column name="start_time" type="TIMESTAMP"/>
            <column name="end_time" type="TIMESTAMP"/>
            <column name="location" type="VARCHAR(255)"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>
    </changeSet>

    <changeSet id="5" author="lifehub">
        <createTable tableName="recommendations">
            <column name="id" type="UUID">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_id" type="UUID">
                <constraints nullable="false" foreignKeyName="fk_recommend_user"
                             references="users(id)"/>
            </column>
            <column name="content" type="TEXT"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>
    </changeSet>

    <changeSet id="6" author="lifehub">
        <createTable tableName="notifications">
            <column name="id" type="UUID">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_id" type="UUID">
                <constraints nullable="false" foreignKeyName="fk_notif_user"
                             references="users(id)"/>
            </column>
            <column name="message" type="TEXT"/>
            <column name="scheduled_for" type="TIMESTAMP"/>
            <column name="status" type="VARCHAR(50)" defaultValue="pending"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
